generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  relationMode      = "prisma"
}

model User {
  id       String  @id @default(uuid())
  username String  @unique
  password String
  orders   Order[]
}

model Book {
  id        String  @id @default(uuid())
  title     String
  author    String
  isbn      String
  pages     Int
  available Boolean
  genre     String
  orders    Order[]
}

model Record {
  id        String  @id @default(uuid())
  title     String
  artist    String
  year      Int
  available Boolean
  genre     String
  orders    Order[]
}

model Order {
  id             String           @id @default(uuid())
  order_type     OrderType
  book_id        String?
  record_id      String?
  user_id        String
  order_date     DateTime
  delivery_date  DateTime?
  payment_method String
  comment        String?
  user           User             @relation(fields: [user_id], references: [id])
  book           Book?             @relation(fields: [book_id], references: [id])
  record         Record?           @relation(fields: [record_id], references: [id])

  @@index([book_id])
  @@index([user_id])
  @@index([record_id])
}

enum OrderType {
  BOOK
  RECORD
}
